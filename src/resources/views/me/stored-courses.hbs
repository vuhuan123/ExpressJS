<div class="mt-4">
    <h3>My Course</h3>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Level</th>
                <th scope="col">Time</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.name}}</td>
                <td><a href="/courses/{{this._id}}/edit" type="button" class="btn btn-primary">Change</a></td>
                <td><a href="" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#delete"
                        data-id={{this._id}}>Delete</a></td>
            </tr>
            {{/each}}

        </tbody>
    </table>


</div>

{{!-- Confirm DELETE --}}

<div class="modal fade" tabindex="-1" id="Modaldelete" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notification</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure delete this course</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger">Confirm Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    const myModal = document.getElementById('Modaldelete')
    myModal.addEventListener('shown.bs.modal', () => {

    })

</script>